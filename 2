		cout << "Выберите тип ввода: " << endl << "1 - ручной ввод; " << endl << "2 - случайная генерация" << endl << "Ввод: ";
		cin >> E;
		if (E == 1) {
			char** arr = simple_input_din(m, n);
			check_din(arr, n, m);
		}
		else {
			char** arr = random_input_din(m, n);
			check_din(arr, n, m);
		}
	}
	else {
		 
		//вектор

		nt E; //выбор типа ввода
		cout << "Выберите тип ввода: " << endl << "1 - ручной ввод; " << endl << "2 - случайная генерация" << endl << "Ввод: ";
		cin >> E;
		if (E == 1) {
	}


	//к динамиxскому массиву
	

	/*if ((n < 5) || (m < 5)) {
		cout << "В этой игре нет выигравших, так как  недостаточно игровых полей." << endl;
		return 0;
	}*/

	 //для динамического массива и статического


	//к статическому массиву 
	
	//к вектору
	vector<vector<char>> vct(n, vector<char>(m));

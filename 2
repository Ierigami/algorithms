#include <iostream>
#include "stdio.h"
#include "stdlib.h"
#include "time.h";
using namespace std;


//функция для заполнения массива вручную
char ** simple_input_din(int m, int n) {

	char ** arr = new char*[m]; //создание массива из n указателей
	for (int i = 0; i < n; i++) {
		arr[i] = new char[m]; //создание n строк из m элементов
	}
	for (int i = 0; i < n; i++) {
		for (int j = 0; j < m; j++) {
			cout << "Введите крестик/нолик: ";
			cin >> arr[i][j];
		}
	}
	cout << endl << "Полученная матрица: " << endl;
	for (int i = 0; i < n; i++) {
		for (int j = 0; j < m; j++) {
			cout << arr[i][j] << " : ";
		}
		cout << endl;
	}
	return arr;
}


//функция для заполнения массива случайно сгенерированными числами
char** random_input_din(int m, int n) {
	int c;
	char** arr = new char* [m]; //создание массива из n указателей
	for (int i = 0; i < n; i++) {
		arr[i] = new char[m]; //создание n строк из m элементов
	}
	srand(time(0));
	for (int i = 0; i < n; i++) {
		for (int j = 0; j < m; j++) {
			c = rand() / 100;
			if (c % 2 == 0) {
				arr[i][j] = 'x';
			}
			else {
				arr[i][j] = 'о';
			}
		}
	}
	cout << endl << "Полученная матрица: " << endl;
	for (int i = 0; i < n; i++) {
		for (int j = 0; j < m; j++) {
			cout << arr[i][j] << " : ";
		}
		cout << endl;
	}
	return arr;
}

void check(char** arr, int n, int m) {
	//проход по горизонтали
	int horizontal = 0;
	for (int i = 0; i < n; i++) { //по строке
		for (int j = 0; j < m; j++) {  //по столбцу
			if (arr[i][j] == 'x') {
				horizontal++;
			}
			else {
				horizontal = 0;
			}
		}
		if (horizontal >= 5) {
			cout << "Победа крестиков по горизонтали" << endl;
		}
	}
}

int main() {
	setlocale(LC_ALL, "rus");
	int m, n; //строки, столбцы
	cout << "Введите количество строк и столбцов динамического массива: : ";
	cin >> n >> m;

	if ((n < 5) || (m < 5)) {
		cout << "В этой игре нет выигравшего. Конец." << endl;
		return 0;
	}

	//char ** arr = simple_input_din(m, n);
	,,char** arr = random_input_din(m, n);
}

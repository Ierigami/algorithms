
#include <iostream>;
#include <stdio.h>;
#include <stdlib.h>;
#include <time.h>;

#define m 100
using namespace std;

void input(int x[], int n) {
	if ((n > 0) && (n < m)) {
		srand(time(0));
		for (int i = 0; i < n; i++) {
			x[i] = 100 + rand() % 300;
		}
	}
}

void output(int x[], int n) {
	for (int i = 0; i < n; i++) {
		cout << x[i] << endl;
	}
}



int check(int x[], int n){
	int c; //цифра элемента массива
	for (int i = 0; i < n; i++) {
		bool N = true;
		int el = x[i]; //элемент массива
		while (el > 0) {
			c = el % 10;
			if (c == 0) {
				N = false;
				break;
			}
			if (x[i] % c != 0) {
				N = false;
				break;
			}
			el /= 10;
		}
		if (N) {
			return i;
		}
	}
	return -1;
}

void paste(int x[], int n, int v) {
	for (int i = n; i > (v + 1); i--) {
		x[i] = x[i - 1];
	}
	x[v + 1] = rand();
}

int de(int x[], int n) {
	int e = n;
	int count = 0;
	for (int i = 0; i < e; i++) {
		if (x[i] % 3 == 0) {
			while (x[i] % 3 == 0) {
				for (int j = i; j < e; j++) {
					x[j] = x[j + 1];
				}
				count += 1;
			}
		}
	}
	n -= count;
	return n;
}

int main() {
	setlocale(0, "");
	int x[m], n, Q, v;
	cout << "ввести количество обрабатываемых элементов массива: ";
	cin >> n;
	input(x, n);
	output(x, n);
	cout << "Ввеите номер задания: " << endl;
	cin >> Q;
	if (Q == 1) {
		v = check(x, n);
		cout << v << endl;
	}
	else if (Q == 2) {
		paste(x, n, v);
		n += 1;
		output(x, n);
	}
	else if (Q == 3) {
		n = de(x, n);
		output(x, n);
	}
}
